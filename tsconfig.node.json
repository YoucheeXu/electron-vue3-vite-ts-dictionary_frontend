{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["vite.config.*", "vitest.config.*", "cypress.config.*", "nightwatch.config.*", "playwright.config.*"],
  "compilerOptions": {
    "module": "ESNext",
    "composite": true,
    "noEmit": true,
    "strict": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "moduleResolution": "Bundler",

    "types": ["node"]
  }
}
